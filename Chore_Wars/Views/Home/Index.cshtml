@{
    ViewData["Title"] = "Home Page";
}

@model List<Player>
<style>
    body {
        background-image: url(https://media.istockphoto.com/vectors/boxing-ring-corner-with-spotlight-vector-id590164568?k=6&m=590164568&s=612x612&w=0&h=KNCe5eCcbRtK0UFaUpAMXask93_CExb_8apYZsH6h_w=);
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    #choreWarsHeader {
        text-align: center;
        color: gold;
        font-weight: 900
    }

    #choosePlayer {
        text-align: center;
        color: gold;
        font-weight: 500;
    }

    #playerLink {
        color: gold;
    }
</style>



<h1 id="choreWarsHeader">WELCOME TO CHORE WARS!</h1>

<div class="container col-md-6 offset-md-3" style="background-color:red" role="tablist">
    <div class="card">
        <div class="card-header" role="tab">
            <h5 class="mb-0">
                <a class="collapsed" data-toggle="collapse" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    Instructions
                </a>
            </h5>
        </div>
        <div id="collapseOne" class="collapse" role="tabpanel" aria-labelledby="headingOne" style="">
            <div class="card-body">
                <p>words here</p>
            </div>
        </div>
    </div>
</div>


<br />

@if (User.Identity.IsAuthenticated)
{
    <h3 id="choosePlayer">CHOOSE YOUR PLAYER</h3>
    @foreach (var player in Model)
    {
        <div class="text-center">
            <p class="text-center"><a class="btn btn-primary" href="../Home/LoginPlayer?id=@player.UserId" id="playerLink">@player.FirstName @player.LastName</a></p>
        </div>
    }
    <div class="text-center">
        <a class="btn btn-primary" href="../Household/AddNewPlayer">+</a>
    </div>


}



@{
    ViewData["Title"] = "ViewChores";
}

@model List<Chore>

<h1>Chore List</h1>

<table class="table">
    <tr>
        <th>Player Name</th>
        <th>Chore Name</th>
        <th>Description</th>
        <th>Point Value</th>
        <th>Due Date</th>
    </tr>
    @foreach (Chore chore in Model)
    {
<tr>
    @if (chore.UserId == null)
    {
        <td><a href="../Chore/AssignChore?id=@chore.ChoreId" class="btn-warning">Assign Chore </a></td>
    }

    else
    {
    <td>@chore.UserId</td>
    }
    
    <td>@chore.ChoreName</td>
    <td>@chore.ChoreDescription</td>
    <td>@chore.PointValue</td>
    <td>@chore.DueDate</td>
    <td><a href="../Chore/DeleteChore?id=@chore.ChoreId" class="btn-danger">Delete Chore </a></td>
    <td><a href="../Chore/EditChore?id=@chore.ChoreId" class="btn-info">Edit Chore </a></td>

</tr>
    }
</table>

@{
    ViewData["Title"] = "AddPlayer";
}

    <style>
        body {
            background-image: url(https://media.istockphoto.com/vectors/boxing-ring-corner-with-spotlight-vector-id590164568?k=6&m=590164568&s=612x612&w=0&h=KNCe5eCcbRtK0UFaUpAMXask93_CExb_8apYZsH6h_w=);
            background-repeat: no-repeat;
            background-size: 100% 100%;
        }

        #addPlayerHeader {
            text-align: center;
            font-style: oblique;
            color: #ff0000;
            background-color: black;
            font-weight: 900;
        }

        #addPlayerForm {
            text-align: justify;
            color: #ff0000;
            columns: auto;
            font-weight: 900;
        }
    </style>

        <h1 id="addPlayerHeader"> AddPlayer</h1 >
    

        <form id="addPlayerForm"action="../Player/AddPlayer" method="post" class="form-control" >
        First Name: <input type="text" name="FirstName" placeholder="First Name" / >
        Last Name: <input type="text" name="LastName" placeholder="Last Name" / >
        Age: <input type="number" name="Age" placeholder="Age" / >

        <input type="submit" value="Add Player!" >

        </form >

    
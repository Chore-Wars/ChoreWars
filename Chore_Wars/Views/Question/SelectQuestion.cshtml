@{
    ViewData["Title"] = "SelectQuestion";
}

@using Chore_Wars.ViewModels;
@model ViewModelPlayerChore

<style>
    body {
        background-image: url(https://media.istockphoto.com/vectors/boxing-ring-corner-with-spotlight-vector-id590164568?k=6&m=590164568&s=612x612&w=0&h=KNCe5eCcbRtK0UFaUpAMXask93_CExb_8apYZsH6h_w=);
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    #choreWarsHeader {
        text-align: center;
        color: gold;
        font-weight: 900
    }
</style>

<h1 id="choreWarsHeader">Select Question</h1>


<div>
    <form action="../Question/SelectQuestion" method="post">
        <div class="col-md-4 offset-md-4">
            Category:<select class="form-control" name="category">
                <option value="10">Books</option>
                <option value="15">Video Games</option>
            </select>
        </div>

        <div class="col-md-4 offset-md-4 text-center">
            <div class="btn-group">
                <input class=" btn btn-success" type="submit" name="difficulty" value="easy" />
                <input class=" btn btn-warning" type="submit" name="difficulty" value="medium" />
                <input class=" btn btn-danger " type="submit" name="difficulty" value="hard" />
            </div>
        </div>
    </form>

    <br />

    <form action="../Question/SelectQuestion" method="post">
        <div class="col-md-4 offset-md-4 text-center">
            <input type="hidden" name="apiOrCustom" value="custom" />
            <input class="btn btn-success" type="submit" value="Get Household Question" />
        </div>
    </form>
</div>

<br />
<br />

<h1 id="choreWarsHeader">@Model.LoggedInPlayer.FirstName's Stats</h1>

<div class="container text-center" style="color:gold">
    <div class="row">
        <div class="col-2">Current Points:    <b>@Model.LoggedInPlayer.CurrentPoints</b></div>
        <div class="col-2">Total Points:      <b>@Model.LoggedInPlayer.TotalPoints</b></div>
        <div class="col-2">Correct Answers:   <b>@Model.LoggedInPlayer.CorrectAnswers</b></div>
        <div class="col-2">Incorrect Answers: <b>@Model.LoggedInPlayer.IncorrectAnswers</b></div>
        <div class="col-2">Chores Complete:   <b>@Model.LoggedInPlayer.ChoresComplete</b></div>
    </div>
</div>

<br />
<br />

<div class="container" style="background-color:WindowText; color:gold">
    <div class="col-md-4 offset-md-4">BUY SOME CHORES LINK HERE</div>
</div>

<br />
<br />

<h1 id="choreWarsHeader">@Model.LoggedInPlayer.FirstName's Chores</h1>

<div class="text-center">
    <table class="table" style="background-color:WindowText; color:gold">
        <tr>
            <th>Chore</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Mark Complete</th>
        </tr>

        @{ foreach (var chore in Model.Chores)
            {
                DateTime myDate = (DateTime)chore.DueDate;

                <tr>
                    <td>@chore.ChoreName</td>
                    <td>@chore.ChoreDescription</td>
                    <td>@myDate.ToShortDateString()</td>
                    <td>BUTTON HERE</td>
                </tr>
            }
        }
    </table>
</div>